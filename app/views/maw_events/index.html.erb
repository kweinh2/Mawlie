<div class="row">
  <h1>Listing MawEvents</h1>
  <div class="pull-right range-query">
    <%= form_tag maw_events_path, method: :get do %>
      <%= text_field_tag 'search[date_from]', @search.date_from %>
      <%= text_field_tag 'search[date_to]', @search.date_to %>
      <%= submit_tag 'Search', class: 'btn search-button' %>
    <% end %>
  </div>
</div>

<div class="media">
  <div class="media-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Date</th>
          <th>Where</th>
          <th>Name</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @maw_events.each do |maw_event| %>
          <tr>
            <td><%= maw_event.date.strftime("%m/%d/%Y") %></td>
            <td><%= maw_event.where %></td>
            <td><%= maw_event.name %></td>
            <td><%= link_to 'Show', maw_event, class: 'btn btn-mini btn-success' %></td>
            <td><%= link_to 'Edit', edit_maw_event_path(maw_event), class: 'btn btn-mini' %></td>
            <td><%= link_to 'Destroy', maw_event, method: :delete, class: 'btn btn-mini btn-danger', data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>

